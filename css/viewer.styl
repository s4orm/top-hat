// loading tree square ->
.spinner
  width 11px
  height 11px
  background-color #ffffff
  margin -13px 3px 0 -17px
  position absolute
  animation spinner-rotate 1.2s infinite ease-in-out


@keyframes zip-loading {
  0% {
    margin: -6px 0 0 -17px;
  }
  25% {
    margin: -10px 0 0 -17px;
  }
  50% {
    margin: -10px 0 0 -13px;
  }
  75% {
    margin: -6px 0 0 -13px;
  }
  100% {
    margin: -6px 0 0 -17px;
  }
}


@keyframes spinner-rotate {
  0% {
    transform: perspective(120px) rotateX(0deg) rotateY(0deg);
    opacity 0.9;
  }
  50% {
    transform: perspective(120px) rotateX(-180.1deg) rotateY(0deg);
    opacity 0.2;
  }
  100% {
    transform: perspective(120px) rotateX(-180deg) rotateY(-179.9deg);
    opacity 0.9;
  }
}

@keyframes fadeIn {
  0% { opacity: 0; background-color: #dbdbdb; }
  20% { opacity: 0; }
  40% { opacity: 0.3; }
  60% { opacity: 0.5; }
  70% { opacity: 0.7; }
  80% { opacity: 0.9; }
  100% { opacity: 1; background-color: none;}
}


